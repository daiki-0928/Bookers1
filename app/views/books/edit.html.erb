<h2>Edit book</h2>

<%= form_with model:@book, local: true do |f| %>
  <div>
   <label>Title</label>
   <%= f.text_field :title %>
  </div>

  <div>
   <label>Body</label>
   <%= f.text_area :body %>
  </div>

  <div>
   <%= f.submit 'Update Book' %>
  </div>

<% end %>

<%= link_to "show", book_path(@book.id)%>
  |
<%= link_to "back", books_path %>


